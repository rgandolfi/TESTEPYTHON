while(n != final):
    if(cont > 0):
        n = int(input("Deseja inserir mais uma diaria? (1-Sim/2-NÃ£o)" ))
    if (n !=final):
        diaria = 1
    while (diaria > 0):
        if(diaria == 1):
            diaria = float(input("Qual o Valor da Diaria? " ))

        valor = 0
        cem = int(diaria // 100)
        diaria = diaria - (100*cem)
        valor = valor + (100*cem)
        ncem = ncem+cem
        cinq = int(diaria // 50)
        diaria = diaria - (50*cinq)
        valor = valor + (50*cinq)
        ncinq = ncinq + cinq
        vinte = int(diaria // 20)
        diaria = diaria - (20*vinte)
        valor = valor + (20*vinte)
        nvinte = nvinte+vinte
        dez = int(diaria // 10)
        diaria = diaria - (10*dez)
        valor = valor + (10*dez)
        ndez = ndez+dez
        cinco = int(diaria // 5)
        diaria = diaria - (5*cinco)
        valor = valor + (5*cinco)
        ncinco = ncinco + cinco
        dois = int(diaria // 2)
        diaria = diaria - (2*dois)
        valor = valor + (2*dois)
        ndois = ndois + dois
        um = int(diaria // 1)
        diaria = diaria - (1*um)
        valor = valor + (1*um)
        num = num+um
        print(diaria)
        if(diaria > 0):
            diaria = int(diaria * 100)
            print(diaria)
            c50 = int(diaria // 50)
            diaria = diaria - (50*c50)
            valor = valor + (0.5*c50)
            nc50 = int(nc50+c50)
            c25 = int(diaria // 25)
            diaria = diaria - (25*c25)
            valor = valor + (0.25*c25)
            nc25 = int(nc25+c25)
            c10 = int(diaria // 10)
            diaria = diaria - (10*c10)
            valor = valor + (0.10*c10)
            nc10 = int(nc10+c10)
            c05 = int(diaria // 5)
            diaria = diaria - (5*c05)
            valor = valor + (0.05*c05)
            nc05 = int(nc05+c05)
            c01 = int(diaria // 1)
            diaria = diaria - (1*c01)
            valor = valor + (0.01*c01)
            nc01 = int(nc01+c01)

        valortt = float(valortt+valor)
        cont = cont + 1

if (ncem > 0):
